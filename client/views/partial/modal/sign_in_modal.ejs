<div class="asio-modal modal fade" id="signInModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <div class="d-block icon-area">
          <div>
            <img class="m-auto" src="img/icon/home-logo.png" />
          </div>
          <div>
            <a class="navbar-brand js-scroll-trigger m-auto">Asio Lending</a>
          </div>
        </div>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div id="signInForm" name="signIn"class="mt-4">
          <div class="form-group">
            <input class="form-control" id="email" type="email" placeholder="Your Email *"></p>
          </div>

          <div class="form-group">
            <input class="form-control" id="password" type="password" placeholder="Your Password *"></p>
          </div>

          <div class="form-group text-center">
            <p class="text-danger warning-signin d-none">Not valid email</p>
          </div>

          <div class="form-group text-center mt-5">
            <a id="login" class="btn btn-lg btn-primary text-white">Sign in</a>
          </div>

        </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer text-center">
        <p class="text-muted m-auto">If you don't have account, please
          <a class="text-muted sign-up-button">
            <u>Sign up</u>
          </a>
        </p>
      </div>

    </div>
  </div>
</div>

<script src="js/modal/sign_in_modal.js"></script>
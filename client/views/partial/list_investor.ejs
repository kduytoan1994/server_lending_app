<section class="bg-white" id="listInvestor">
  <div class="container big-container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Top investor</h2>
        <hr class="hr-primary" />
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-lg-12">
        <!-- Swiper -->
        <div id="investorSwiper" class="swiper-container">
          <div class="swiper-wrapper">
            
            <% result.list_investors.forEach(function(investor) { %>

            <div class="swiper-slide">
              <div class="image-container image-investor">
                <img src="<%= investor.avatar %>" />
              </div>

              <div class="information-investor">
                <p class="name"><%= investor.name %></p>
                <p class="money font-weight-bold">Total lended: <%= investor.lended_money %> VND</p>
              </div>
            </div>

            <% }); %>
          </div>
          <!-- Add Pagination -->
          <div class="swiper-pagination"></div>
        </div>
      </div>
    </div>
  </div>
</section>